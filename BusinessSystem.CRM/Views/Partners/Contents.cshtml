@model BusinessSystem.Database.Models.DataTransferObjects.Response.PartnerContentResponseModel
@{
    ViewData["Title"] = "Partner Content";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    <script src="~/plugins/dropify/dropify.min.js"></script>
    <script>
        const userId = @ViewBag.SelectedPartnerId;
        $('.dropify').dropify({
            messages: {
                'default': 'Drag and drop a file here or click',
                'replace': 'Drag and drop or click to replace',
                'remove':  'Remove',
                'error':   'Ooops, something wrong happended.'
            }
        });
    </script>
    <script src="~/assets/js/utility/ajax.js"></script>
    <script src="~/assets/js/goods/goods.js"></script>
    <script src="~/assets/js/categories/categories.js"></script>
    <script src="~/plugins/blockui/jquery.blockUI.min.js"></script>
    <script src="~/assets/js/users/account-settings.js"></script>
}

@section Styles
{
    <link href="~/assets/css/users/account-setting.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="~/plugins/dropify/dropify.min.css">
    <link href="~/plugins/animate/animate.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/components/custom-modal.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/tables/table-basic.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/components/tabs-accordian/custom-tabs.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="~/assets/css/forms/switches.css">
}

<div class="container">
    <div class="row layout-top-spacing">
        <div class="col-lg-12 col-12 layout-spacing">
            <div class="statbox widget box box-shadow">
                <div class="widget-header">
                    <div class="row">
                        <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                            <h4>Partner Content: @Model.Partner.Username</h4>
                        </div>
                    </div>
                </div>
                <div class="widget-content widget-content-area vertical-line-pill">
                    <div class="row mb-4 mt-3">
                        <div class="col-sm-3 col-12">
                            <div class="nav flex-column nav-pills mb-sm-0 mb-3 text-center mx-auto" id="v-line-pills-tab" role="tablist" aria-orientation="vertical">
                                <a class="nav-link active mb-3" id="v-line-pills-common-tab" data-toggle="pill" href="#v-line-pills-common" role="tab" aria-controls="v-line-pills-home" aria-selected="true">Common</a>
                                <a class="nav-link mb-3  text-center" id="v-line-pills-categories-tab" data-toggle="pill" href="#v-line-pills-categories" role="tab" aria-controls="v-line-pills-profile" aria-selected="false">Categories</a>
                                <a class="nav-link mb-3  text-center" id="v-line-pills-products-tab" data-toggle="pill" href="#v-line-pills-products" role="tab" aria-controls="v-line-pills-messages" aria-selected="false">Products</a>
                            </div>
                        </div>
                        <div class="col-sm-9 col-12">
                            <div class="tab-content" id="v-line-pills-tabContent">
                                <div class="tab-pane fade show active" id="v-line-pills-common" role="tabpanel" aria-labelledby="v-line-pills-common-tab">
                                    <h4 class="mb-4">@Model.Partner.Username</h4>
                                    <p class="mb-4">
                                        @Model.Partner.Description
                                    </p>
                                </div>
                                <div class="tab-pane fade" id="v-line-pills-categories" role="tabpanel" aria-labelledby="v-line-pills-categories-tab">
                                    @{ @(await Html.PartialAsync("_PartnerCategoriesTable", Model.Categories)) }
                                </div>
                                <div class="tab-pane fade" id="v-line-pills-products" role="tabpanel" aria-labelledby="v-line-pills-products-tab">
                                    @{ @(await Html.PartialAsync("_PartnerProductsTable", Model.Goods))}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
    </div>
</div>